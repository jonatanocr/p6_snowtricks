{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>New trick</h1>

    {{ form_start(newTrickForm) }}
        {{ form_row(newTrickForm.name) }}
        {{ form_row(newTrickForm.description) }}
        {{ form_row(newTrickForm.category) }}
        {{ form_row(newTrickForm.pictureFiles) }}

        {% for video in newTrickForm.trickVideos %}
            <p>{{ form_row(video.url) }}</p>
        {% endfor %}



    <ul class="trickVideos"
        data-index="{{ newTrickForm.trickVideos|length > 0 ? newTrickForm.trickVideos|last.vars.name + 1 : 0 }}"
        data-prototype="{{ form_widget(newTrickForm.trickVideos.vars.prototype)|e('html_attr') }}"
    ></ul>

    <button type="button" id="add_input" class="add_item_link" data-collection-holder-class="trickVideos">Add a video url</button>

    {{ form_end(newTrickForm) }}
    <input id="pageType" type="hidden" value="trick_new">
{% endblock %}
