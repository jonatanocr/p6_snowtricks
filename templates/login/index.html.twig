{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <h1 class="mt-4 text-center cool_font">Login</h1>
    <div class="container text-center mt-4">
        <form action="{{ path('login') }}" method="post">
            <div class="row justify-content-center mt-2">
                <div class="col-2">
                    <input type="text" class="adminInput" id="username" name="_username" value="{{ last_username }}" placeholder="Username" />
                </div>
            </div>
            <div class="row justify-content-center mt-2 mb-2">
                <div class="col-2">
                    <input type="password" class="adminInput" id="password" name="_password" placeholder="Password" />
                </div>
            </div>
            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"/> #}
            <div class="row justify-content-center">
                <div class="col-2">
                    <button type="submit" class="btn btn-dark">login</button>
                </div>
            </div>
        </form>
        <div class="row text-center mt-4">
            <a class="linkTxtDecoNone" href="{{ path('reset_password') }}">Forgot your password?</a>
        </div>
    </div>
{% endblock %}
